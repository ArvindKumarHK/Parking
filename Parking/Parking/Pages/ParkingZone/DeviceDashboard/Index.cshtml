@page
@model Parking.Pages.ParkingZone.DeviceDashboard.IndexModel
@{
    ViewData["title"] = "DeviceDashboard";
}

<div class="d-flex align-items-center justify-content-start gap-4">
    <div>
        <h1 class="display-5" style="text-align:center;">Device Dashboard </h1>
    </div>
</div>

<div class="d-flex flex-wrap justify-content-start gap-3 mt-4">
    @for (int i = 1; i <= 4; i++)
    {
        <div class="card gateway-bg shadow" style="width: 312px;">
            <a asp-area="Pages" asp-page="/ParkingZone/Dashboard/Index" style="text-decoration: none; color: black;">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-8 d-flex justify-content-start">
                            <h3 class="text-dark text-limit mb-0" style="font-size: 16px; line-height: 26px;">Device - @i</h3>
                        </div>
                        <div class="col-4 d-flex align-items-center justify-content-end">
                            <span id="d-@i-con" class="badge rounded-pill bg-danger">OFFLINE</span>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <img src="/Images/camera_icon.jpg" style="max-height: 100px; object-fit: scale-down;" />
                        </div>
                    </div>

                    <div class="col d-flex align-items-end justify-content-between mt-2">
                        <div class="pt-1">
                            <i id="d-@i-pow" class="bi bi-plug me-1" data-bs-toggle="tooltip" data-bs-title="Plugged-In" data-bs-placement="bottom"></i>
                            <p class="lead mb-0 d-inline" style="font-size: 14px;">LoRa | </p>
                            <p class="lead mb-0 d-inline" style="font-size: 14px;">1.0</p>
                        </div>

                        <div>
                            <a class="badge bg-dark text-light no-underline" href=""> Cameras : 2 </a>
                        </div>
                    </div>
                </div>
            </a>
        </div>

    }
</div>

<style>
    .card {
        margin-bottom: 20px;
    }

    .gateway-bg {
        background-color: #f8f9fa;
    }
</style>